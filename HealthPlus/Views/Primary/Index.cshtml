@using HealthPlus.Models
@model List<Service>

@{
    
}

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
    <style>

        </style>
    <link href="~/Content/animate.min.css" rel="stylesheet" />
    
<link href="~/Content/animate.min.css" rel="stylesheet" />
    <link href="~/Content/aos.css" rel="stylesheet"/>
</head>
<body>
<div id="carouselExampleIndicators" class="carousel slide slider" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
    </ol>
    <div class="carousel-inner blurred-bg-container">

        <div class="caption ">
            <div class="text">
                <h2>
                    <i style="font-size: 47px; margin-right: 2px;" class="logo fa fa-stethoscope animated bounceInLeft"></i>
                    Health Plus
                    <i><sub style="font-size: 17px;">We Care</sub></i>
                </h2>
                <p class="fadeInUp" style="margin-left: 63px;">
                    Always there to serve your need. We promise to make your life better. Give us a chance to serve you
                </p>
            </div>

            <div class="blur"></div>

        </div>
        <div class="carousel-item active">
            <img class="d-block slider" src="~/Photos/Hospital1.jpg" alt="First slide">

        </div>
        <div class="carousel-item">
            <img class="d-block slider" src="~/Photos/hospital2.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block slider" src="~/Photos/hospital3.jpg" alt="Third slide">
        </div>
        <div class="carousel-item">
            <img class="d-block slider" src="~/Photos/hospital4.jpg" alt="Third slide">
        </div>
        <div class="carousel-item">
            <img class="d-block slider" src="~/Photos/ward.jpg" alt="Third slide">
        </div>

    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="container">

    <div class="row">
        <div class="row">
            <div class="col-md-12">
                <h2 class="centertext">Our Services</h2>
                <p class="subtitle">
                    There are our services in short. Select one you need. After clicking on those option you will be
                    forwarded to a page as in need. Even if you need direct contact with our hospital feel free to contact consltant on right side.
                </p>
            </div>

        </div>
        <div class="col-md-10">
            <div class="row" data-aos="zoom-in-up" data-aos-duration="1000" data-aos-once="false">
                @{
                    foreach (Service service in Model)
                    {

                        <div class="col-md-4">
                            <a href="@service.TargetLink" style="background-image: url(@service.Image);" class="blurredBG">
                                <div class="parentBG">

                                    <div class="content">
                                        <h5 class="insidetext">@service.Title</h5>
                                        @service.Description
                                    </div>
                                    <div class="bG" style="background-image: url(@service.Image);">
                                        <!--same background-->

                                    </div>
                                </div>
                            </a>
                        </div>

                    }
                }
            </div>

        </div>

        <div class="col-md-2">

            <div class="sidebar" data-aos="fade-left" data-aos-duration="1000" data-aos-once="true">
                <h2>Reception</h2>
                <img class="sideimg" src="~/Photos/reception.jpg" />
                <p style="width: 223px; margin-top: 7px;">
                    <b>Contact:</b><br />
                    <i class="fa fa-phone"></i> +880145245844<br />
                    <i class="fa fa-envelope"></i> medcare@med.com
                </p>
            </div>
            <div class="sidebar" data-aos="fade-left" data-aos-duration="1000" data-aos-once="true">
                <h2>Emergency</h2>
                <img class="sideimg" src="~/Photos/consultant.jpg" />
                <p style="width: 223px; margin-top: 7px;">
                    <b>Contact:</b><br />
                    <i class="fa fa-phone"></i> +880145245844<br />
                    <i class="fa fa-envelope"></i> medcare@med.com
                </p>
            </div>

        </div>
    </div>


    <div class="row">
        <div class="row">
            <div class="col-md-12">
                <h2 class="centertext">Messages</h2>
                <p class="subtitle">
                    There are our services in short. Select one you need. After clicking on those option you will be
                    forwarded to a page as in need. Even if you need direct contact with our hospital feel free to contact consltant on right side.
                </p>
            </div>
        </div>
        
        <div class="col-md-6" data-aos="fade-left" data-aos-duration="1000">
            <div>
                <img class="mimg" src="~/Photos/consultant.jpg" />
            </div>
            <div class="mtitle">
                <b>Prof. Dr. Sharaj kanti</b><br />
                Founder of HealtPlus<br />
                MBBS, FPS

            </div>

        </div>
        <div class="col-md-6 mtext" data-aos="fade-left" data-aos-duration="1000">
            <p style="margin-top: 15%;">
                This is a great opportunity to have a chance to serve you people. Here you will find helpful friendly
                doctors, nurses and consultant. We thereby pray your well health and prosporus life.
            </p>

        </div>
        
    </div>
    <div class="row" style="margin-top: 10px" data-aos="fade-right" data-aos-duration="1000">

        <div class="col-md-6">
            <p style="margin-top: 15%;">
                This is a great opportunity to have a chance to serve you people. Here you will find helpful friendly
                doctors, nurses and consultant. We thereby pray your well health and prosporus life.
            </p>
        </div>
        <div class="col-md-6 mtext">
            <div class="">
                <img class="mimg " src="~/Photos/consultant.jpg" />
            </div>
            <div class="mtitle">
                <b>Prof. Dr. Sharaj kanti</b><br />
                Founder of HealtPlus<br />
                MBBS, FPS

            </div>
        </div>
    </div>

</div>
</body>
</html>
<script src="~/Scripts/aos.js"></script>
@section scripts{
    <script src="~/Scripts/aos.js"></script>
    <script>
        AOS.init();
    </script>
}