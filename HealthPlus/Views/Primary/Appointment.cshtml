@section scripts{
    <script type="text/javascript">
        
        $(document).ready(function () {
            $(document).on('click', '.link', function (e) {
                $('#next').empty();
                var k = $('#Did').text();
                $("#Dform").empty();
                $('#Dform').append('<input type="hidden" name="id" value="' + k + '"/>');
                $('#next').append($(this).html());
                $('#dform').show();
                $('#drow').hide();
                return false;

            });
            $('#back').on('click', function () {
                $('#dform').hide();
                $('#drow').show();
                return false;
            });

            $('.link').on('click', function () {
                var k = $('#Did').text();
               // $("#add").val('');
                $('#next').empty();
                $("#Dform").empty();
                $('#Dform').append('<input type="hidden" name="id" value="' + k + '"/>');
               
                console.log(k);
                $('#next').append($(this).html());
                $('#dform').show();
                $('#drow').hide();
                return false;
            });
            $('#dform').hide();

            $('#docCategory').on('change', function () {
                $('#dform').hide();
                $('#drow').show();
                var docId = $('#docCategory').val();
                if (docId === null)
                    reload();
                console.log(docId);
                $('#drow').empty();
               
                var json = { id: docId };
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("GetAllDocById", "Primary")',
                    contentType: 'application/json',
                    data: JSON.stringify(json),
                    success: function (response) {
                        $.each(response, function (key, value) {
                            //$('#tableBody').append('<tr><td>' + value.CourseCode + '</td><td>' + value.CourseName + '</td><td>' + value.CourseSemester + '</td><td>' + value.CourseTeacher + '</td></tr>');
                            $('#drow').append(
                                '<div class="col-md-3" style="margin-bottom: 36px;">' +
                                '<a class="link" href="">'+
                                '<div>' +
                                ' <div style="visibility: hidden; height: 0;" id="Did">10</div>'+
                                '<img class="docimg" src="/' +value.Photo+'"/>'+
                                '</div>'+
                                '<div class="doctext">'+
                                '<h2>'+ value.Name +'</h2><h6>'+ value.Designation +'</h6>' + value.Degree +
                                '</div>'+
                                '<div class="mblur"></div> </a></div>');
                            
                        });
                    }
                });
            });
           
        });

    </script>
